{
    "name": "haxe-debug",
    "displayName": "Haxe Debug",
    "version": "1.0.3",
    "publisher": "vshaxe",
    "license": "MIT",
    "description": "Debugger for Haxe",
    "author": {
        "name": "vshaxe"
    },
    "engines": {
        "vscode": "^1.4.0"
    },
    "icon": "images/icon.svg",
    "categories": [
        "Debuggers"
    ],
    "galleryBanner": {
        "theme": "dark",
        "color": "#A84B38"
    },
    "keywords": [
        "haxe",
        "flash"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/vshaxe/vshaxe-debugadapter.git"
    },
    "bugs": {
        "url": "https://github.com/vshaxe/vshaxe-debugadapter/issues"
    },
    "dependencies": {
        "vscode-debugprotocol": "1.8.0-pre.3",
        "vscode-debugadapter": "1.8.0-pre.4"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "mocha": "^2.4.5"
    },
    "scripts": {
        "vscode:prepublish": "haxe build.hxml"
    },
    "contributes": {
        "debuggers": [
            {
                "type": "fdb",
                "label": "Haxe (Flash)",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "haxe"
                    ]
                },
                "program": "./bin/fdb_adapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "full path to a swf file.",
                                "default": "${workspaceRoot}/bin/your.swf"
                            },
                            "request": {
                                "type": "string",
                                "description": "launch",
                                "default": "launch"
                            },
                            "receiveAdapterOutput": {
                                "type": "bool",
                                "description": "redirect adapter log to debug console",
                                "default": false
                            }
                        }
                    },
                    "attach": {
                        "properties": {
                            "request": {
                                "type": "string",
                                "description": "Attaches to a swf which is launched manually",
                                "default": "attach"
                            },
                            "receiveAdapterOutput": {
                                "type": "bool",
                                "description": "redirect adapter log to debug console",
                                "default": false
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Flash",
                        "type": "fdb",
                        "request": "launch",
                        "program": "${workspaceRoot}/bin/your.swf"
                    }
                ]
            },
            {
                "type": "hxcpp",
                "label": "Haxe (cpp)",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "haxe"
                    ]
                },
                "program": "./bin/hxcpp_adapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "full path to a binary file.",
                                "default": "${workspaceRoot}/bin/yourBinary"
                            },
                            "request": {
                                "type": "string",
                                "description": "launch",
                                "default": "launch"
                            },
                            "receiveAdapterOutput": {
                                "type": "bool",
                                "description": "redirect adapter log to debug console",
                                "default": false
                            }
                        }
                    }
                },
                "initialConfigurations": [{
                    "name": "Cpp",
                    "type": "hxcpp",
                    "request": "launch",
                    "program": "${workspaceRoot}/bin/yourBinary"
                    }
                ]
            }
        ]
    }
}
